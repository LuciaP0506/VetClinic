@model IEnumerable<VetClinic.Models.InvoiceModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("IdInvoice", "Index", new { sortOrder = ViewBag.IdInvoiceSortParam})
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdConsultation)
        </th>
        <th>
            @Html.ActionLink("IdOwner", "Index", new { sortOrder = ViewBag.IdOwnerSortParam })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.ActionLink("EventDate", "Index", new { sortOrder = ViewBag.EventDateSortParam })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdInvoice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdConsultation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdOwner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.IdInvoice }) |
            @Html.ActionLink("Details", "Details", new { id = item.IdInvoice }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.IdInvoice })
        </td>
    </tr>
}

</table>
